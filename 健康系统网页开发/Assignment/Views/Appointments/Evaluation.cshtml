@model Assignment.Models.Appointment

@{
    ViewBag.Title = "Evaluation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Evaluate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    <h4>Appointments</h4>
    @Html.HiddenFor(model => model.AspNetUserId)
    @Html.HiddenFor(model => model.Date)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TreatmentId)
    <h4>The treatment of appointment:</h4>
    <div class="form-group">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Treatment.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Treatment.Name)
            </dd>
        </dl>
    </div>

    <h4>Rate for this appointment:</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.Evaluation, htmlAttributes: new { @class = "control-label col-md-2" })
        <input id="input" name="input" class="rating" step="0.5" value="@ViewBag.rateValue">
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.0.7/js/star-rating.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.0.7/css/star-rating.css" media="all" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/Scripts/jquery-3.5.1.js")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#input').rating();
        });
    </script>
}
